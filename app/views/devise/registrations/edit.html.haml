.container.user-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit your profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, value: "#{current_user.name}"
            .user-image.col-md-2{:style => 'background-image: url("= current_user.avatar");'}
              %button.btn.btn-primary Change image
              = f.file_field :avatar
          = f.email_field :email, value: "#{current_user.email}", class: "user-email"
          = f.password_field :password, placeholder: "Password", class: "user-password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :group, value: "#{current_user.group}"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, rows: "4", value: "#{current_user.profile}"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :carrier, rows: "4", value: "#{current_user.works}"
      .row.text-center.user-btn
        = f.submit value: "Save", class: "btn btn-lg btn-primary btn-block"
